    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ achat.id }}</td>
            </tr>
            <tr>
                <th>DateOperation</th>
                <td>{{ achat.dateOperation ? achat.dateOperation|date('Y-m-d') : '' }}</td>
