{% extends 'base.html.twig' %}

{% block title %}Achat index{% endblock %}

{% block body %}
    <h1>Achat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateOperation</th>
                <th>Description</th>
                <th>Transport</th>
                <th>InvoicePath</th>
                <th>GrandTotal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for achat in achats %}
            <tr>
                <td>{{ achat.id }}</td>
                <td>{{ achat.dateOperation ? achat.dateOperation|date('Y-m-d') : '' }}</td>
                <td>{{ achat.description }}</td>
                <td>{{ achat.transport }}</td>
                <td>{{ achat.invoicePath }}</td>
                <td>{{ achat.grandTotal }}</td>
                <td>
                    <a href="{{ path('app_achat_show', {'id': achat.id}) }}">show</a>
                    <a href="{{ path('app_achat_edit', {'id': achat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_achat_new') }}">Create new</a>
{% endblock %}
